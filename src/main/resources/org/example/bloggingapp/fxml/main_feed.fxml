<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="org.example.bloggingapp.controller.MainFeedController"
      styleClass="main-container" spacing="0">
    
    <!-- 1ï¸âƒ£ Header Bar -->
    <HBox styleClass="header-bar" alignment="CENTER_LEFT" spacing="20">
        <children>
            <Label text="ðŸ“± Blogging Platform" styleClass="app-title" HBox.hgrow="ALWAYS"/>
            
            <HBox spacing="15" alignment="CENTER">
                <children>
                    <TextField fx:id="searchField" promptText="Search posts, tags..." 
                               styleClass="search-field" prefWidth="300"/>
                    <Button fx:id="refreshButton" text="ðŸ”„" styleClass="icon-button" onAction="#refreshPosts"/>
                </children>
            </HBox>
            
            <Circle radius="20" styleClass="user-avatar"/>
        </children>
        <padding>
            <Insets top="15" right="20" bottom="15" left="20"/>
        </padding>
    </HBox>
    
    <!-- 2ï¸âƒ£ Create Post Card -->
    <VBox styleClass="create-post-card" spacing="15">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        
        <HBox spacing="15" alignment="CENTER_LEFT">
            <children>
                <Circle radius="25" styleClass="post-avatar"/>
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <TextArea fx:id="postContentField" promptText="What's on your mind?" 
                                   styleClass="post-textarea" prefHeight="80" wrapText="true"/>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <children>
                                <Label fx:id="charCountLabel" text="0/280" styleClass="char-counter"/>
                                <Button fx:id="postButton" text="Post" styleClass="post-button" onAction="#createPost"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </VBox>
    
    <!-- 3ï¸âƒ£ Main Content Area with Overlay -->
    <StackPane VBox.vgrow="ALWAYS">
        <children>
            <!-- Feed Area -->
            <ScrollPane fx:id="feedScrollPane" styleClass="feed-scroll" fitToWidth="true">
                <content>
                    <VBox fx:id="feedContainer" styleClass="feed-container" spacing="20">
                        <padding>
                            <Insets top="10" right="20" bottom="20" left="20"/>
                        </padding>
                    </VBox>
                </content>
            </ScrollPane>
            
            <!-- Comment Section (Toggleable) -->
            <VBox fx:id="commentSection" styleClass="comment-section" visible="false" managed="false" 
                  alignment="BOTTOM_CENTER" StackPane.alignment="BOTTOM_CENTER"
                  style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 12px;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <VBox spacing="15" styleClass="comment-overlay">
                    <children>
                        <Label text="Comments" styleClass="review-title"/>
                        <ScrollPane fx:id="commentsScrollPane" styleClass="feed-scroll" fitToWidth="true" prefHeight="200">
                            <content>
                                <VBox fx:id="commentsContainer" styleClass="feed-container" spacing="10">
                                    <padding>
                                        <Insets top="10" right="10" bottom="10" left="10"/>
                                    </padding>
                                </VBox>
                            </content>
                        </ScrollPane>
                        
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <children>
                                <Circle radius="20" styleClass="post-avatar"/>
                                <VBox HBox.hgrow="ALWAYS">
                                    <children>
                                        <TextArea fx:id="commentField" promptText="Write a comment..." 
                                                   styleClass="comment-textarea" prefHeight="60" wrapText="true"/>
                                        <Button fx:id="submitCommentButton" text="Comment" styleClass="comment-button" onAction="#addComment"/>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </VBox>
            
            <!-- Review Section Overlay -->
            <VBox fx:id="reviewSection" styleClass="review-section" visible="false" managed="false" 
                  alignment="BOTTOM_CENTER" StackPane.alignment="BOTTOM_CENTER"
                  style="-fx-background-color: #f0f0f0; -fx-background-radius: 12px;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <VBox spacing="15" styleClass="review-overlay">
                    <children>
                        <Label text="Rate this post" styleClass="review-title"/>
                        <HBox spacing="10" alignment="CENTER">
                            <children>
                                <Label fx:id="star1" text="â­" styleClass="star-rating"/>
                                <Label fx:id="star2" text="â­" styleClass="star-rating"/>
                                <Label fx:id="star3" text="â­" styleClass="star-rating"/>
                                <Label fx:id="star4" text="â­" styleClass="star-rating"/>
                                <Label fx:id="star5" text="â­" styleClass="star-rating"/>
                            </children>
                        </HBox>
                        <TextArea fx:id="reviewCommentField" promptText="Share your thoughts..." 
                                   styleClass="review-textarea" prefHeight="60" wrapText="true"/>
                        <Button fx:id="submitReviewButton" text="Submit Review" styleClass="review-button" onAction="#submitReview"/>
                    </children>
                </VBox>
            </VBox>
        </children>
    </StackPane>
    
</VBox>
